
<div style="text-align: left; padding-left: 650px;">
  <div style="text-align: justfy; background-color: #90EE90; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); width: 100%; max-width: 500px;">
    <div style="width: 300px; height: 300px; border-radius: 50%; overflow: hidden; margin: 0 auto 20px; border: 4px solid white; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
      <% if current_user.profile_photo.attached? %>
        <%= image_tag url_for(current_user.profile_photo), style: 'width: 300px; height: 300px; border-radius: 50%; object-fit: cover;' %>
      <% else %>
        <img src="profile.jpeg" alt="Profile Photo" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;">
      <% end %>
    </div><div style="text-align: center;">
    <h1 style="margin: 0; color: #333;"><%= current_user.first_name.titleize %></h1></div>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Name:</strong> <%= current_user.name.titleize %></p>
<!--<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Last Name:</strong> <%= current_user.last_name.titleize %></p>-->
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Email:</strong> <%= current_user.email %></p>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Phone:</strong> <%= current_user.phone %></p>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Work:</strong> <%= current_user.work.titleize%></p>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Address:</strong> <%= current_user.address.titleize %></p>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Hobby:</strong> <%= current_user.intrest.titleize %></p>
<p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Education:</strong> <%= current_user.education.titleize%></p>




  </div>
</div>
<style>
body {
  background-image: url('/assets/fb.webp');
  background-repeat: no-repeat;
  background-attachment: fixed; /* Keep the background fixed while scrolling */
  background-position: center center;
  width: 100%;
  height: 100vh;
  margin: 0;
}
</style>
