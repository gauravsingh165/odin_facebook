
<div style="text-align: center; padding-left: 650px;">
  <div style="text-align: center; background-color: #90EE90; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); width: 100%; max-width: 500px;">
    <div style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; margin: 0 auto 20px; border: 4px solid white; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);">
      <% if current_user.profile_photo.attached? %>
        <%= image_tag url_for(current_user.profile_photo), style: 'width: 150px; height: 150px; border-radius: 50%; object-fit: cover;' %>
      <% else %>
        <img src="profile.jpeg" alt="Profile Photo" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;">
      <% end %>
    </div>
    <h1 style="margin: 0; color: #333;"><%= current_user.first_name %></h1>
    <p style="margin: 5px 0; color: #666;"><strong style="color: #333;">First Name:</strong> <%= current_user.first_name %></p>
    <p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Last Name:</strong> <%= current_user.last_name %></p>
    <p style="margin: 5px 0; color: #666;"><strong style="color: #333;">Phone:</strong> <%= current_user.phone %></p>
  </div>
</div>
