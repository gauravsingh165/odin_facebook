<%= link_to "Posts Index", posts_path %>
<h1>All Users</h1>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      <% unless current_user == user %>
        <%= link_to 'Send Friend Request', new_friend_request_path(recipient_id: user.id) %>
      <% end %>
    </li>
  <% end %>
</ul>



<style>
body {
  background-image: url('/assets/fb.webp');
  background-repeat: no-repeat;
  background-attachment: fixed; /* Keep the background fixed while scrolling */
  background-position: center center;
  width: 100%;
  height: 100vh;
  margin: 0;
}
</style>
