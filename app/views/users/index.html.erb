<div style='text-align:center'>
<h1>Create New Profile</h1>
<%= form_for current_user do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.submit 'Create Profile' %>
  </div>
<% end %>
</div>
