<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content, rows: 1 %>
  </div>
  <div class="field">
  <%= f.label :user_id %>
  <%= f.text_field :user_id, value: current_user.id, disabled: true %>
</div>
  <div class="actions">
    <%= f.submit 'Create Post' %>
  </div>
<% end %>

