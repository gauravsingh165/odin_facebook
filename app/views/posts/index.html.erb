<style>
.post-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20px;
}

.post-card {
  margin: 10px;
  padding: 20px;
  width: 400px; 
  height:200px;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: left;
  box-sizing: border-box;
}
</style>
<!--<% if @user %>
  <%= link_to 'View Profile', user_path(@user) %>
<% end %>-->

<%= link_to 'Friend Requests', received_friend_requests_path, class: 'btn btn-bounded-info' %>

<%= link_to "Users Index", users_path %>
<%= link_to "Notification Index", notifications_path %> 
<div style="text-align: center;">
  <h1 style="color: #1877f2; font-size: 3rem; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); padding: 20px; background-color: #ffffff; border-radius: 10px;">FACEBOOK</h1>
  <h1>All Posts</h1>
   <% @post.each do |post| %> 
  <div class="post-list">
   
      <div class="post-card">
        <span class="post-title">
         <% if post.user %>
      <%= post.user.name %>
    <% else %>
      Unknown User
    <% end %>
           <%= link_to post.title, post_path(post) %>
           <% if post.image.attached? %>
            <%= image_tag post.image, style: 'width: 350px; height: 150px;' %>
              <% end %><br>
          
        </span>
      </div>
  </div>
    <% end %>
</div>

<style>
body {
  background-image: url('/assets/fb.webp');
  background-repeat: no-repeat;
  background-attachment: fixed; /* Keep the background fixed while scrolling */
  background-position: center center;
  width: 100%;
  height: 100vh;
  margin: 0;
}
</style>
