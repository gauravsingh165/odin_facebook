<style>
.post-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20px;
}

.post-card {
  margin: 10px;
  padding: 20px;
  width: 400px; 
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: left;
  box-sizing: border-box;
}
</style>

<div style="text-align: center;">
  <h1 style="color: #1877f2; font-size: 3rem; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); padding: 20px; background-color: #ffffff; border-radius: 10px;">FACEBOOK</h1>
  <h1>All Posts</h1>
   <% @post.each do |post| %> 
  <div class="post-list">
   
      <div class="post-card">
        <span class="post-title">
          <%= link_to post.title, post_path(post) %>
        </span>
      </div>
  </div>
    <% end %>
</div>
