<style>
.post-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20px;
}

.post-card {
  margin: 10px;
  padding: 20px;
  width: 400px; 
  height:200px;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: left;
  box-sizing: border-box;
}
</style>
  <br>
  
<%= turbo_stream_from PostsChannel %>

<%= turbo_stream.replace @post do %>
  <%= render partial: 'post', collection: @posts %>
<% end %>

  <%# <%= link_to "Notification Index", notifications_path , class: 'btn btn-outline-info rounded-0'%> 
  <div style="text-align: center;">
    <h1 style="color: red">All Posts</h1>
     <% @post.each do |post| %> 
      <div class="post-list">
        <div class="post-card">
          <span class="post-title">
            <% if post.user %>
              <%= post.user.name %>
            <% else %>
              Unknown User
            <% end %>
             <%= link_to post.title, post_path(post) %>
            <% if post.image.attached? %>
              <%= image_tag post.image, style: 'width: 350px; height: 150px;' %>
            <% end %><br>
          </span>
        </div>
      </div>
   <% end %>
</div>

<style>
body {
  background-image: url('/assets/fb.webp');
  background-repeat: no-repeat;
  background-attachment: fixed; /* Keep the background fixed while scrolling */
  background-position: center center;
  width: 100%;
  height: 100vh;
  margin: 0;
}
</style>
