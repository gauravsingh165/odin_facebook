<!-- app/views/friend_requests/new.html.erb -->
<h1>New Friend Request</h1>

<p>Sending friend request to: <%= @recipient.name %></p>

<%= form_with(model: @friend_request, url: friend_requests_path, method: :post) do |form| %>
  <%= form.hidden_field :recipient_id, value: @recipient.id %>
  <%= form.submit 'Send Friend Request' %>
<% end %>

<%= link_to 'Back', users_path %>

